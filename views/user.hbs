<div class="container">
  <div class="row align-items-center">
    <div class="col-4">
      <img class="card-img-top" src="{{targetUser.image}}" alt="Card image cap" width="200px">
    </div>
    <div class="col-8">
      <h1><b>{{targetUser.name}}</b></h1>
      <h4>{{targetUser.email}}</h4>
      <ul>
        <li><b>{{Restaurants.length}}</b> restaurants that you commented</li>
        <li><b>{{targetUser.FavoriteRestaurants.length}}</b> favorite restaurants</li>
        <li><b>{{targetUser.Followings.length}}</b> users you follow</li>
        <li><b>{{targetUser.Followers.length}}</b> follows you</li>
      </ul>
      <br />
      {{#if isSameUser}}
      <a href="/users/{{targetUser.id}}/edit">
        <button type="button" class="btn btn-primary">Edit Profile</button>
      </a>
      {{/if}}
    </div>
  </div>
  <br>
</div>
