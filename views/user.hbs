<div class="container">
  <nav class="navbar navbar-light bg-light">
    <span class="navbar-brand mb-0 h1"><b>{{counts}}</b> comments that you had for following restaurants:</span>
  </nav>
  <br>
  <div class="d-flex justify-content-start flex-wrap">
    {{#each targetUser.Comments}}
    <div class="col-2">
      <a href="/restaurants/{{this.Restaurant.id}}"><img class="card-img-top" src="{{this.Restaurant.image}}"
          alt="Card image cap" width="100px"></a>
    </div>
    {{/each}}
  </div>
</div>