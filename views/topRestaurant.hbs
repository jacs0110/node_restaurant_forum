{{#each topRestaurants}}
<div class="row">
  <div class="col-md-4">
    <a href="/restaurants/{{this.id}}"><img class="img-responsive center-block" src="{{this.image}}"
        style="width: 250px;margin-bottom: 25px;margin-right: 25px;"></a>
  </div>
  <div class="col-md-8">
    <h3 class="card-title"><a href="/restaurants/{{this.id}}" style="text-decoration: none">
        {{this.name}}
      </a></h3>
    <h5><span class="badge badge-success">Followers: {{this.FavoriteUsers.length}}</span></h5>
    <p class="card-text">{{this.description}}</p>
    {{#if this.isFavorited }}
    <form action="/favorite/{{this.id}}?_method=DELETE" method="POST"><button type="submit"
        class="btn btn-danger btn-sm mr-3">Remove Favorite</button></form>
    {{else}}
    <form action="/favorite/{{this.id}}" method="POST"><button type="submit" class="btn btn-primary btn-sm mr-3">Add to
        Favorite</button>
    </form>
    {{/if}}
  </div>
  <hr>
</div>
<br>
<hr>
{{/each}}